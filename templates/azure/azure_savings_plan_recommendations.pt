end

###############################################################################
# Datasources & Scripts
###############################################################################

datasource "ds_azure_savings_plan_recommendations_1" do
  request do
    verb "GET"
    host "raw.githubusercontent.com"
    path "/flexera-public/cco_demo/refs/heads/main/generated_data/fake_incident_tables/azure_savings_plan_recommendations_1.json"
